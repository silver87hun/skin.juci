            <description>Custom Shutdown Timer button</description>
            <left>0</left>
            <top>0</top>
            <width>90</width>
            <height>90</height>
            <texturefocus>-</texturefocus>
            <texturenofocus>-</texturenofocus>
            <onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
            <pulseonselect>no</pulseonselect>
            <font>-</font>
            <label>20150</label>
            <onleft>11</onleft>
            <onright>12</onright>
            <onup>17</onup>
            <ondown>15</ondown>
          </control>
