<?xml version="1.0" encoding="UTF-8"?>
<!-- pop-up menu for cirrus extended v2 -->
<!-- mod by el_Paraguayo -->
<window id="1121" type="dialog">
    <defaultcontrol>9021</defaultcontrol>

    <controls>
        <control type="group">

            <animation effect="slide" start="0,0" end="280,0" time="400" tween="quadratic" easing="out" condition="ControlGroup(9021).HasFocus">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="-380,0" time="400" tween="quadratic" easing="out" condition="ControlGroup(1121).HasFocus">WindowClose</animation>

            <control type="button" id="8999">
                <description>Fake button for mouse control</description>
                <left>-260</left>
                <top>0</top>
                <width>265</width>
                <height>720</height>
                <label>-</label>
                <font>-</font>
                <texturenofocus>-</texturenofocus>
                <texturefocus>-</texturefocus>
                <visible>true</visible>
            </control>

            <!-- Menu background panel -->
            <control type="image">
                <left>-820</left>
                <top>0</top>
                <width>820</width>
                <height>720</height>
                <texture border="5">dialogbackground.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <left>-820</left>
                <top>0</top>
                <width>820</width>
                <height>720</height>
                <texture border="5">dialogbackground.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <left>-250</left>
                <top>650</top>
                <width>160</width>
                <height>40</height>
                <texture>xbmc_logo_white.png</texture>
            </control>
            <control type="image">
                <left>-267</left>
                <top>400</top>
                <width>250</width>
                <height>140</height>
                <aspectratio aligny="bottom">stretch</aspectratio>
                <texture>backtexture.png</texture>
                <bordertexture border="8">backtexture.png</bordertexture>
                <bordersize>8</bordersize>
                <visible>Container.Content(Movies) | Container.Content(Episodes)</visible>
            </control>
            <control type="image">
                <left>-267</left>
                <top>400</top>
                <width>250</width>
                <height>140</height>
                <texture fallback="splashm.png" background="true">$INFO[ListItem.Art(fanart)]</texture>
                <bordersize>4</bordersize>
                <visible>Container.Content(Movies)</visible>
            </control>
            <control type="image">
                <left>-267</left>
                <top>400</top>
                <width>250</width>
                <height>140</height>
                <texture fallback="splashm.png" background="true">$INFO[ListItem.Thumb]</texture>
                <bordersize>8</bordersize>
                <visible>Container.Content(Episodes)</visible>
            </control>
            <control type="image">
                <left>-260</left>
                <top>380</top>
                <width>250</width>
                <height>1</height>
                <texture flipy="true">separator.png</texture>
                <visible>Container.Content(Movies) | Container.Content(Episodes)</visible>
            </control>
            <control type="group">   
                <left>-240</left>
                <top>20</top>
                <control type="label">
                    <description>View options</description>
                    <left>0</left>
                    <top>0</top>
                    <width>250</width>
                    <height>30</height>
                    <font>cirrus_24</font>
                    <textcolor>accent</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <scroll>false</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>41240</label>
                </control>
            </control>

            <!-- MENU ITEMS BELOW -->
            <control type="group" id="9021">
                <left>-260</left>
                <top>70</top>
                <control type="button" id="2">
                    <left>0</left>
                    <top>0</top>
                    <include>ButtonCommonValues</include>
                    <description>Trailer Windowed</description>
                    <onclick>Dialog.Close(1121)</onclick>
                    <onclick>PlayMedia($INFO[ListItem.Trailer],1)</onclick>
                    <label>41204</label>
                    <enable>!IsEmpty(ListItem.Trailer)</enable>
                    <onleft>9021</onleft>
                    <onright>9021</onright>
                    <onup>10</onup>
                    <ondown>3</ondown>
                </control>
                <control type="button" id="3">
                    <description>Trailer Fullscreen</description>
                    <left>0</left>
                    <top>40</top>
                    <include>ButtonCommonValues</include>
                    <onclick>Dialog.Close(1121)</onclick>
                    <onclick>Dialog.Close(2003)</onclick>
                    <onclick>PlayMedia($INFO[ListItem.Trailer])</onclick>
                    <label>41205</label>
                    <enable>!IsEmpty(ListItem.Trailer)</enable>
                    <onleft>9021</onleft>
                    <onright>9021</onright>
                    <onup>2</onup>
                    <ondown>4</ondown>
                </control>
                <control type="button" id="4">
                    <description>Movie Windowed</description>
                    <left>0</left>
                    <top>80</top>
                    <onclick>Dialog.Close(1121)</onclick>
                    <onclick>PlayMedia($INFO[ListItem.FileNameAndPath],1)</onclick>
                    <label>41206</label>
                    <enable>Container.Content(movies) | Container.Content(episodes) | Container.Content(videofiles)</enable>
                    <include>ButtonCommonValues</include>
                    <onleft>9021</onleft>
                    <onright>9021</onright>
                    <onup>3</onup>
                    <ondown>5</ondown>
                </control>
                <control type="button" id="5">
                    <description>Movie Fullscreen</description>
                    <left>0</left>
                    <top>120</top>
                    <onclick>Dialog.Close(1121)</onclick>
                    <onclick>Dialog.Close(2003)</onclick>
                    <onclick>PlayMedia($INFO[ListItem.FileNameAndPath])</onclick>
                    <label>41207</label>
                    <enable>Container.Content(movies) | Container.Content(episodes) | Container.Content(videofiles)</enable>
                    <include>ButtonCommonValues</include>
                    <onleft>9021</onleft>
                    <onright>9021</onright>
                    <onup>4</onup>
                    <ondown>8</ondown>
                </control>
                <control type="button" id="8">
                    <description>Cinema</description>
                    <left>0</left>
                    <top>160</top>
                    <onclick>Playlist.Clear</onclick>
                    <onclick>Dialog.Close(1121)</onclick>
                    <onclick>XBMC.RunScript(script.cinema.experience)</onclick>
                    <visible>Container.Content(Movies) + System.HasAddon(script.cinema.experience) + !SubString(Container.FolderPath,plugin://plugin,Left)</visible>
                    <label>41208</label>
                    <include>ButtonCommonValues</include>
                    <onleft>9021</onleft>
                    <onright>9021</onright>
                    <onup>5</onup>
                    <ondown>10</ondown>
                </control>
                <control type="button" id="10">
                    <description>Exit</description>
                    <left>0</left>
                    <top>280</top>
                    <onclick>Dialog.Close(1121)</onclick>
                    <label>13012</label>
                    <include>ButtonCommonValues</include>
                    <onleft>9021</onleft>
                    <onright>9021</onright>
                    <onup>8</onup>
                    <ondown>2</ondown>
                </control>
            </control>
        </control>

    </controls>
</window>
