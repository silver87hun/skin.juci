<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- ============================= MusicWallView====================== -->
    <include name="MusicWallView">
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300"/>
                <effect type="fade" start="0" end="100" time="300"/>
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300"/>
                <effect type="fade" start="100" end="0" time="300"/>
            </animation>      
            <visible>Control.IsVisible(525)</visible>
            <control type="image">
                <!-- bottom bar background -->
                <left>0</left>
                <top>100r</top>
                <width>1280</width>
                <height>700</height>
                <aspectratio>stretch</aspectratio>
                <texture>rightlistbackground.png</texture>
            </control>
            <control type="image">
                <!-- bottom bar background -->
                <left>0</left>
                <top>100r</top>
                <width>1280</width>
                <height>700</height>
                <aspectratio>stretch</aspectratio>
                <texture>rightlistbackground.png</texture>
            </control>
            <control type="image">
                <!-- darken the background a bit -->
                <left>0</left>
                <top>0</top>
                <width>1280</width>
                <height>620</height>
                <aspectratio>stretch</aspectratio>
                <texture>black-back3.png</texture>
            </control>
            <control type="image">
                <left>35r</left>
                <top>350</top>
                <width>30</width>
                <height>40</height>
                <texture>rightarrow.png</texture>
            </control>
            <control type="image">
                <left>5</left>
                <top>350</top>
                <width>30</width>
                <height>40</height>
                <texture flipx="true">rightarrow.png</texture>
            </control>
            <!-- Music info down thebottom -->	
            <control type="group">
                <top>640</top>
                <visible>Container.Content(Albums) | Container.Content(Artists) | Window.IsVisible(MusicFiles) | Container.Content(Addons) | Window.IsActive(1)</visible>
                <control type="label">
                    <left>50</left>
                    <top>40</top>
                    <width>400</width>
                    <height>25</height>
                    <label>$INFO[ListItem.Artist]</label>
                    <scroll>true</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>cirrus_24</font>
                    <textcolor>accent</textcolor>
                    <shadowcolor>black</shadowcolor>
                </control>
                <control type="label">
                    <left>50</left>
                    <top>40</top>
                    <width>400</width>
                    <height>25</height>
                    <label>$INFO[ListItem.Label]</label>
                    <scroll>true</scroll>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>cirrus_24</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <visible>Container.Content(Files) | Container.Content(Addons)</visible>
                </control>
                <control type="label">
                    <left>50</left>
                    <top>0</top>
                    <width>400</width>
                    <height>25</height>
                    <label>$INFO[ListItem.Album]</label>
                    <wrapmultiline>false</wrapmultiline>
                    <align>left</align>
                    <aligny>center</aligny>
                    <font>cirrus_30</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                </control>
                <control type="label">
                    <left>40r</left>
                    <top>35</top>
                    <width>300</width>
                    <height>25</height>
                    <label>$INFO[ListItem.Genre, [COLOR=accent]$LOCALIZE[135]:[/COLOR] ]</label>
                    <scroll>true</scroll>
                    <align>right</align>
                    <aligny>top</aligny>
                    <font>cirrus_24</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <wrapmultiline>false</wrapmultiline>
                    <visible>Container.Content(Albums) | Container.Content(Addons)</visible>
                </control>
                <control type="label">
                    <description>Year txt</description>
                    <left>40r</left>
                    <top>0</top>
                    <width>300</width>
                    <height>25</height>
                    <label>$INFO[listitem.Year]</label>
                    <align>right</align>
                    <aligny>center</aligny>
                    <font>cirrus_30</font>
                    <textcolor>white</textcolor>
                </control>
            </control>
            <!-- musicwall panel -->
            <control type="panel" id="525">
                <left>40</left>
                <top>115</top>
                <width>1200</width>
                <height>450</height>
                <onleft>525</onleft>
                <onright>525</onright>
                <onup>60</onup>
                <ondown>60</ondown>
                <viewtype label="41115">panel</viewtype>
                <orientation>horizontal</orientation>
                <pagecontrol>60</pagecontrol>
                <scrolltime>200</scrolltime>
                <preloaditems>2</preloaditems>
                <!-- CHAGE BELOW TO ADD TO MORE SECTIONS -->
                <visible>Container.Content(Albums) | Container.Content(Artists) | Window.IsVisible(MusicFiles) | Container.Content(Addons)</visible>
                <itemlayout height="150" width="150">
                    <control type="group">
                        <left>0</left>
                        <top>0</top>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>150</width>
                            <height>150</height>
                            <aspectratio>stretch</aspectratio>
                            <fadetime>200</fadetime>
                            <texture background="true">$INFO[Listitem.Icon]</texture>
                            <bordertexture border="6">ContentPanelvertical.png</bordertexture>
                            <bordersize>6</bordersize>
                        </control>
                    </control>		
                </itemlayout>
                <focusedlayout height="200" width="180">
                    <control type="group">	
                        <animation type="Focus" condition="Container(525).Row(1) | Container(525).Row(2) | Container(525).Row(3) | Container(525).Row(0)" reversible="false">
                            <effect type="zoom" center="75,70" start="100" end="140" time="400" easing="out" tween="cubic" reversible="false"/>
                        </animation>
                        <left>0</left>
                        <top>0</top>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>150</width>
                            <height>150</height>
                            <aspectratio>stretch</aspectratio>
                            <fadetime>200</fadetime>
                            <texture>black-back.png</texture>
                            <bordertexture border="6">ContentPanelvertical.png</bordertexture>
                            <bordersize>6</bordersize>
                        </control>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>150</width>
                            <height>150</height>
                            <aspectratio>stretch</aspectratio>
                            <fadetime>200</fadetime>
                            <texture background="true">$INFO[Listitem.Icon]</texture>
                            <bordersize>6</bordersize>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="60">
                <left>-10</left>
                <top>600</top>
                <width>1300</width>
                <height>25</height>
                <texturesliderbackground border="14,0,14,0">ScrollBarV.png</texturesliderbackground>
                <textureslidernib>ScrollBarV.png</textureslidernib>
                <textureslidernibfocus>ScrollBarV_bar_focus.png</textureslidernibfocus>
                <onup>2</onup>
                <ondown>525</ondown>
                <showonepage>true</showonepage>
                <orientation>horizontal</orientation>
                <visible allowhiddenfocus="true">Control.IsVisible(525) + Control.HasFocus(60)</visible>
            </control>
        </control>
    </include>
</includes>
